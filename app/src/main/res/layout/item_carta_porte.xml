<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNumeroCartaPorte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_inset_10"
            android:layout_marginTop="@dimen/content_inset_10"
            android:fontFamily="@font/helvetica_bold"
            android:text="GRR-001-00000036"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/content_inset_16" />
        <TextView
            android:id="@+id/txtDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_inset_10"
            android:layout_marginTop="@dimen/content_inset_10"
            android:layout_marginBottom="@dimen/content_inset_10"
            android:text="Destino: PUNO/ PUNO/ PUNO"
            android:textSize="@dimen/content_inset_16" />


    </LinearLayout>


</RelativeLayout>