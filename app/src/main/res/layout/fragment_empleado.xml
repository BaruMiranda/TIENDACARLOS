<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/style_linnear"
    android:layout_margin="@dimen/content_inset_20"
    android:orientation="vertical"
    tools:context=".usuarios.EmpleadoFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/empleados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="@dimen/content_inset_20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/content_inset_2"
            app:cardCornerRadius="@dimen/content_inset_10">
            <TextView
                android:id="@+id/txtNumeroCartaPorte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_inset_10"
                android:layout_marginTop="@dimen/content_inset_10"
                android:fontFamily="@font/helvetica_bold"
                android:text="GRR-001-00000036"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/content_inset_16" />
            <TextView
                android:id="@+id/txtDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/content_inset_10"
                android:layout_marginTop="@dimen/content_inset_10"
                android:layout_marginBottom="@dimen/content_inset_10"
                android:text="Destino: PUNO/ PUNO/ PUNO"
                android:textSize="@dimen/content_inset_16" />
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</LinearLayout>